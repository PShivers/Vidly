@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customer Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<ul class="list-group">
    @foreach (var customer in Model)
    {
        @Html.ActionLink(customer.Name, "Details", "Customers", new { customerId = $"{customer.Id}" }, new { @class = "list-group-item list-group-item-action" })
    }
</ul>

